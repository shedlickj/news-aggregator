<%= stylesheet_link_tag 'scaffold' %>

<div id="top_user_bar" class="styled_link">
	<span></span>
</div>
<div id="container">
	<div id="header">
		<h1>NewsEngage</h1>
	</div>
    <div id="content" align="center">
    	<div class="form_box">

		<div class="form_title"><h3>Forgot your password?</h3></div>
		<div class="form_data">

		<% form_for resource_name, resource, :url => password_path(resource_name) do |f| %>
  		<%= f.error_messages %>
  		<table cellpadding="10"><tr>
  		<td><%= f.label :email %></td>
  		<td><%= f.text_field :email, :size => 40 %></td>
		</tr></table>
  		<p><%= f.submit "Send me reset password instructions" %></p>
		<% end %>

		<%= render :partial => "shared/devise_links" %>
		</div>
		</div>
	</div>
</div>