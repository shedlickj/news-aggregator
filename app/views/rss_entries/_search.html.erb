<% row = 1 %>
<% for rss_entry in @rss_entries %>
<%# if(rss_entry.cluster)
	cluster = Cluster.find(rss_entry.cluster)%>
	
<script type="text/javascript">
    $(document).ready(function(){
        $('#arrow-toggle<%= rss_entry.id %>').click(function(){
            $('.table_entry<%= rss_entry.id %>').slideToggle(400);
            return false;
        });
    });
</script>
<script type="text/javascript">
    $(document).ready(function(){
        $('#similar-toggle<%= rss_entry.id %>').click(function(){
            $('.table_entry_similar<%= rss_entry.id %>').slideToggle(400);
            return false;
        });
    });
</script>
<div class="news_container">
<% if(row%2==0) %><table class="table_row_even" width="100%">
<% else %><table class="table_row_odd" width="100%">
<% end %>
  <tr>
    <td colspan="2"><a target='_blank' href ='<%=h rss_entry.link %>'><%=h rss_entry.title %></a></td>
    <td width="26%"><%=h rss_entry.published.strftime("%m/%d/%Y")%> at <%=h rss_entry.published.strftime("%I:%M%p") %></td>
	<td width="14%">
		<div align="right">
		<%= form_remote_tag( :url => {:action => 'update', :id => rss_entry.id, :task => "favorite"}, 
		:before => "Element.show('spinner')", :complete  => "Element.hide('spinner')") %>
		<% if rss_entry.favorite %>
			<% star_img="<div class=star_link></div>" %>
		<% else %>
			<% star_img="<div class=star_link_gray></div>" %>
		<% end %>
		<%= link_to(star_img, rss_entry_path(rss_entry.id), :task => "favorite", :class=>'update_entry') %>
    	</form>
		</div>
	</td>
  </tr>
  <tr>
  	<td width="30%"><%=h rss_entry.source %></td>
	<td width="30%"><% if(rss_entry.cluster) %>Similar Articles<span id="similar-toggle<%= rss_entry.id %>" class="ui-state-hover ui-corner-all ui-icon ui-icon-triangle-1-s"></span><% end %></td>
	<td>
		<% if rss_entry.hidden
			hide_var = 'Unhide Article'
		else
			hide_var = 'Hide Article'
		end %>
    	<div align="center">
    		<%= link_to(hide_var, rss_entry_path(rss_entry.id), :task => "hide", :class => "update_entry") %>
		</div></td>
	<td>See More<span id="arrow-toggle<%= rss_entry.id %>" class="ui-state-hover ui-corner-all ui-icon ui-icon-triangle-1-s"></span></td>
  </tr>
</table>
<div class="table_entry<%= rss_entry.id %>" style="display:none; border:1px solid #999;">
	<% if(row%2==0) %><div class="table_description_even">
	<% else %><div class="table_description_odd">
	<% end %>
	<%=h rss_entry.description %>
	</div>
</div>
<% if(rss_entry.cluster) %>
<div class="table_entry_similar<%= rss_entry.id %>" style="display:none; border:1px solid #999;">
	<% if(row%2==0) %><div class="table_description_even">
	<% else %><div class="table_description_odd">
	<% end %>
	<% cluster = Cluster.find(rss_entry.cluster) %>
	<%= cluster.get_followers(cluster) %><br />
	Similarities: <%= cluster.get_matches(cluster).join(', ') %>
	</div>
</div>
<% end %>
</div> 	
<% row+=1 %>
<% end %>
<% end %>
