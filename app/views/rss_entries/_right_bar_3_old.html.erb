<div class="right_bar_title">
    Feeds
    <div style="display:block;float:right;">
        <span id="move_icon" class="ui-state-default ui-corner-all ui-icon ui-icon-arrow-4"></span>
    </div>
</div>
<div class="right_bar_data">
    <table>
        <% for feed in @feeds %>
        <tr>
            <td>
                <table><tr><td><div id="edit_feeds-tag" style="display:none;"><span class="ui-state-default ui-corner-all ui-icon ui-icon-wrench"></div></span></td><td><%=h feed.title %></td></tr></table>
            </td>
        </tr>
        <% end %>
    </table>
</div>
<a href="#" id="new_feed-toggle">Add a new feed</a><a href="#" id="edit_feeds-toggle">Edit</a>
<div id="new_feed_tag" style="display:none; padding:3px; background:#ddd; width=200px">
    <% @feed = Feed.new %>
    <% remote_form_for :feed, @feed, :url => {:controller => 'feeds', :action => 'create'}, :html => { :method => 'post' }, :before => "Element.show('spinner')", :complete  => "Element.hide('spinner')" do |f| %>
    <p>
        <%= f.label :title %>
        <br/>
        <%= f.text_field :title, :size=>"23" %>
    </p>
    <p>
        <%= f.label :url %>
        <br/>
        <%= f.text_field  :uri, :size=>"23" %>
    </p>
    <p>
        <%= f.submit 'Create' %>
    </p>
    <% end %>
</div>
