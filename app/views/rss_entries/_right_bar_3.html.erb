<script type="text/javascript">
    $(function(){
        $("#accordion").accordion({
			active: 0,
			event: "mouseover",
            autoHeight: false,
            navigation: true
        });
    });
</script>
<style>
ul {padding-left: 3px;}
</style>

<div class="right_bar_title move_container">
    Lists & Feeds
    <!--<div style="display:block;float:right;">
        <span id="move_icon" class="ui-state-default ui-corner-all ui-icon ui-icon-arrow-4"></span>
    </div>-->
</div>

<div id="accordion" class="right_bar_data">
	<h3><a href="#">All</a></h3>
	<div>
		<ul >
		<% 	@feeds.each{ |feed|	%>
			<li><%= feed.title %></li><% } %>
		</ul>
	</div>
<% for list in @lists %>
	<h3><a href="#"><%= list.name %></a></h3>
	<div>
		<ul>
		<% 	list.get_feeds(list.id).each{ |feed_id|			
			feed = Feed.find(feed_id) %>
			<li><%= feed.title %></li><% } %>
		</ul>
	</div>
<% end %>
</div>