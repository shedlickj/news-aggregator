<!-- Datepicker -->
<script type="text/javascript">
    $j(function(){
        $j(".datepicker").datepicker({
            showOn: 'button',
            buttonImage: 'images/calendar.png',
            buttonImageOnly: true,
            showAnim: 'blind'
        });
    });
</script>

<!-- Widget cornering -->
<script type="text/javascript">
    $j(function(){
        $j("#right_bar_1").corner()
        $j("#right_bar_2").corner()
        $j("#right_bar_3").corner()
    });
</script>

<!-- Toggling -->
<script type="text/javascript">
    $j(document).ready(function(){
        $j('a#advanced_search-toggle').click(function(){
            $j('#advanced_search_tag').slideToggle(400);
            return false;
        });
        $j('a#feed_search-toggle').click(function(){
            $j('#feed_search_tag').slideToggle(400);
            return false;
        });
        $j('a#more_views-toggle').click(function(){
            $j('#more_views_tag').slideToggle(400);
            return false;
        });
        $j('a#new_feed-toggle').click(function(){
            $j('#new_feed_tag').slideToggle(400);
            return false;
        });
    });
</script>

<!-- Sortables -->
<meta charset="UTF-8" />
<style type="text/css">
#sortable { list-style-type: none; margin: 0; padding: 0; width: 60%; }
#sortable div { }
</style>
<script type="text/javascript">
$j(function() {
	$j("#right_bar").sortable({ axis: 'y', forcePlaceholderSize: true, opacity: 0.8, handle: 'span#move_icon' });
	$j("#right_bar").disableSelection();
});
</script>
	
<!-- Right bar partials -->
<div id="right_bar">
    <div id="right_bar_1" style="width:180px; margin:5px; padding:10px; background:#cccccc;">
        <%= render :partial => 'right_bar_1' %>
    </div>
    <div id="right_bar_2" style="width:180px; margin:5px; padding:10px; background:#cccccc;">
        <%= render :partial => 'right_bar_2' %>
    </div>
    <div id="right_bar_3" style="width:180px; margin:5px; padding:10px; background:#cccccc;">
        <%= render :partial => 'right_bar_3' %>
    </div>
</div>