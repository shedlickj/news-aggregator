<% if !@feed.errors.empty? %>
	<% if(@feed.errors.on("title") != nil) %>
		$('.feed_update_title_error<%=@feed.id%>').show();
		$('.feed_update_title_error<%=@feed.id%>').html("Title <%= @feed.errors.on("title") %>");
		$('#feed_update_title<%=@feed.id%>').html('<span class="ui-state-error ui-corner-all ui-icon ui-icon-closethick" style="float:right;"></span>');
	<% else %>
		$('.feed_update_title_error<%=@feed.id%>').hide();
		$('#feed_update_title<%=@feed.id%>').html('<span class="ui-state-accept ui-corner-all ui-icon ui-icon-check" style="float:right;"></span>');
	<% end %>
	<% if(@feed.errors.on("uri") != nil) %>
		$('.feed_update_uri_error<%=@feed.id%>').show();
		$('.feed_update_uri_error<%=@feed.id%>').html("URL <%= @feed.errors.on("uri") %>");
		$('#feed_update_uri<%=@feed.id%>').html('<span class="ui-state-error ui-corner-all ui-icon ui-icon-closethick" style="float:right;"></span>'); 
	<% elsif(@feed.errors.on("base") != nil) %>
		$('.feed_update_uri_error<%=@feed.id%>').show();
		$('.feed_update_uri_error<%=@feed.id%>').html("Error: <%= @feed.errors.on("base").humanize %>");
		$('#feed_update_uri<%=@feed.id%>').html('<span class="ui-state-error ui-corner-all ui-icon ui-icon-closethick" style="float:right;"></span>'); 
	<% else %>
		$('#feed_update_uri<%=@feed.id%>').html('<span class="ui-state-accept ui-corner-all ui-icon ui-icon-check" style="float:right;"></span>');
		$('.feed_update_uri_error<%=@feed.id%>').hide(); 
	<% end %>
<% else %>
	$("#feed_pane").html("<%= escape_javascript(render :partial => "feeds_pane") %>");
	$('.feed_update_title_error<%=@feed.id%>').hide();
	$('#feed_update_title<%=@feed.id%>').html('<span class="ui-state-accept ui-corner-all ui-icon ui-icon-check" style="float:right;"></span>');
	$('.feed_update_uri_error<%=@feed.id%>').hide();
	$('#feed_update_uri<%=@feed.id%>').html('<span class="ui-state-accept ui-corner-all ui-icon ui-icon-check" style="float:right;"></span>');
	$("#list_replace").html("<%= escape_javascript(render :partial => 'feed_edit') %>");
<% end %>
$('#feed_update_spinner<%= @feed.id %>').hide();
ajaxLinks();