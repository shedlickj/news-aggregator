<h1>New cluster</h1>

<% form_for(@cluster) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :list_of_articles %><br />
    <%= f.text_area :list_of_articles %>
  </p>
  <p>
    <%= f.label :spot_matches %><br />
    <%= f.text_area :spot_matches %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', clusters_path %>